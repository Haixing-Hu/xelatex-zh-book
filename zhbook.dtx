% 显示当前章信息（即\cs{leftmark}）。
%    \begin{macrocode}
\fancyhead[RE]{\leftmark}
\fancyhead[LO]{%
 \ifthenelse{\equal{\rightmark}{}}% if \rightmark is empty
            {\leftmark}%
            {\rightmark}%
}
%    \end{macrocode}
%
% 设置全局使用|fancy|风格。
%    \begin{macrocode}
